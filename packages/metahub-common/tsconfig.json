{
  "compilerOptions": {
    "composite": true,
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"]
}
