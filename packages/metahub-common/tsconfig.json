{
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "outDir": "../../dist/node_modules/metahub-common",
    "declarationMap": true,
    "module": "CommonJS",
    "strict": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "../../dist/node_modules/metahub-common/tsconfig.tsbuildinfo"
  },
  "include": ["./src/**/*", "./test/**/*", "src/package.json"],
  "exclude": ["node_modules"]
}
