{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["*/node_modules"],
  "references": [
    {"path": "../metahub-common"},
    {"path": "../metahub-markdown"},
    {"path": "../metahub-protocol"}
  ]
}
